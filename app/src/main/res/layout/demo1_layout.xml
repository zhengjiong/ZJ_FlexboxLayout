                android:padding="8dp"
                android:text="textview3"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="#f9c798"
                android:padding="8dp"
                android:text="textview4"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
